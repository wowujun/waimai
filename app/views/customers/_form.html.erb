
<%= form_for(@customer) do |f| %>
    <fieldset>
      <% if @customer.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this admin from being saved:</h2>

            <ul>
              <% @customer.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>


      <table class="col-lg-12">
        <tr>
          <div class="form-group">
            <td style="margin-top: 10px;width:30px;text-align: right;padding: 10px;"><%= f.label :用户姓名 %></td>
            <% if  @customer.name %>
                <td class="col-lg-2"><%= f.text_field :name, class:"form-control", readonly:true %></td>
            <% else %>
                <td><%= f.text_field :name, class:"form-control",size:'200' %></td>
            <% end %>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <td style="margin-top: 10px;width:80px;text-align: right;padding: 10px;"><%= f.label :微信ID %></td>
            <td><%= f.text_field :weichat_id, class:"form-control" %></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <td style="margin-top: 10px;width:80px;text-align: right;padding: 10px;"><%= f.label :电话 %></td>
            <td><%= f.text_field :tel, class:"form-control" %></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <td style="margin-top: 10px;width:80px;text-align: right;padding: 10px;"><%= f.label :地址 %></td>
            <td><%= f.text_field :address, class:"form-control" %></td>
          </div>
        </tr>

        <tr>
          <div class="form-group">
            <td style="margin-top: 10px;width:80px;text-align: right;padding: 10px;"><%= f.label :位置 %></td>
            <td><%= f.text_field :location, class:"form-control" %></td>
          </div>
        </tr>

        <tr>
          <div class="form-group">
            <td style="margin-top: 10px;width:80px;text-align: right;padding: 10px;"><%= f.label :余额 %></td>
            <td><%= f.text_field :balance, class:"form-control" %></td>
          </div>
        </tr>

        <tr>
          <div class="form-group">
            <td style="margin-top: 10px;width:80px;text-align: right;padding: 10px;"><%= f.label :积分 %></td>
            <td><%= f.text_field :integral, class:"form-control" %></td>
          </div>
        </tr>
        <tr>
          <td align="right" colspan="2" style="padding: 0px;"><div class="actions">
            <%= f.submit :"确定", class:"btn btn-primary-outline pull-right" %></td>
          </div>
        </tr>
      </table>
    </fieldset>
<% end %>



<%= render 'head'%>
<div class="container fluid-height clearfix">
  <div class="row">
    <div class="col-lg-12">
      <h2 class="heading"><i class="icon-bullhorn"></i>&nbsp; 商家信息</h2>
      <div class="widget-container fluid-height clearfix" style="padding: 10px;">
        <div class="col-lg-7">
          <p>
            <span class="col-sm-2" style="text-align: right;">商家姓名:</span>
            <%= @seller.name %>
          </p>
          <p>
            <span class="col-sm-2" style="text-align: right;">商家登录名:</span>
            <%=  @seller.loginname %>
          </p>
          <p>
            <span class="col-sm-2" style="text-align: right;">商家密码:</span>
           **********
          </p>
          <p>
            <span class="col-sm-2" style="text-align: right;">商家简介:</span>
            <%= @seller.summary %>
          </p>
          <p>
            <span class="col-sm-2" style="text-align: right;">商家电话:</span>
            <%= @seller.tel %>
          </p>
          <p>
            <span class="col-sm-2" style="text-align: right;">商家地址:</span>
            <%= @seller.address %>
          </p>
          <p>

          </p>
          <p>
            <span class="col-sm-2" style="text-align: right;">提示信息:</span>
            <%= @seller.hint %>
          </p>
          <p>
            <span class="col-sm-2" style="text-align: right;">商家位置:</span>
            <%= @seller.location %>
          </p>
          <p>
            <span class="col-sm-2" style="text-align: right;">商家状态:</span>
            <%if @seller.status==1%>
               正常
                <%else%>
               休息中
            <%end%>

          </p>
          <%= link_to '编辑', edit_advertisement_path(@seller) ,class:"btn btn-primary-outline pull-right",'data-no-turbolink'=>true%>
          <%= link_to '返回', advertisements_path,class:"btn btn-primary-outline pull-right" %>
        </div>
        <div class="col-lg-5">
          <span class="col-sm-2" style="text-align: right;">商家logo:</span>
          <%= @seller.logo.html_safe() %>
          </div>
      </div>
    </div>
  </div>
</div>


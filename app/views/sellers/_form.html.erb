<%= form_for(@seller) do |f| %>
    <fieldset>
      <% if @seller.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@seller.errors.count, "error") %> prohibited this admin from being saved:</h2>

            <ul>
              <% @seller.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>


      <table class="col-lg-12">


        <tr>
          <div class="form-group">
            <td style="margin-top: 10px;width:90px;text-align: right;padding: 10px;"><%= f.label :商家主分类 %></td>
            <td> <%= f.hidden_field :cla_id,value:1%>
              <% @clas = Cla.all%>
              <select id="sideclaid" class="form-control" type="text" onchange="cardtypeselect()">
                <%= @clas.each do |f| %>
                    <option value=<%=f.id%>><%=f.name%></option>
                <%end%>
              </select></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <td style="margin-top: 10px;width:30px;text-align: right;padding: 10px;"><%= f.label :商家姓名 %></td>
            <td><%= f.text_field :name, class:"form-control" %></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <td style="margin-top: 10px;width:80px;text-align: right;padding: 10px;"><%= f.label :商家登录名 %></td>
            <td><%= f.text_field :loginname, class:"form-control" %></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <td style="margin-top: 10px;width:80px;text-align: right;padding: 10px;"><%= f.label :密码 %></td>
            <td><%= f.password_field :password, class:"form-control" %></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <td style="margin-top: 10px;width:80px;text-align: right;padding: 10px;"><%= f.label :password_confirmation, "确认密码" %></td>
            <td><%= f.password_field :password_confirmation, class:"form-control" %></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <td style="margin-top: 10px;width:80px;text-align: right;padding: 10px;"><%= f.label :商家简介 %></td>
            <td><%= f.text_field :summary, class:"form-control" %></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <td style="margin-top: 10px;width:80px;text-align: right;padding: 10px;"><%= f.label :商家电话 %></td>
            <td><%= f.text_field :tel, class:"form-control" %></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <td style="margin-top: 10px;width:80px;text-align: right;padding: 10px;"><%= f.label :商家地址 %></td>
            <td><%= f.text_field :address, class:"form-control" %></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <td style="margin-top: 10px;width:80px;text-align: right;padding: 10px;"><%= f.label :商家ＬＯＧＯ %></td>
            <td><%= f.kindeditor :logo, class:"form-control" %></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <td style="margin-top: 10px;width:80px;text-align: right;padding: 10px;"><%= f.label :提示信息 %></td>
            <td><%= f.text_field :hint, class:"form-control" %></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <td style="margin-top: 10px;width:80px;text-align: right;padding: 10px;"><%= f.label :商家位置 %></td>
            <td><%= f.text_field :location, class:"form-control" %></td>
          </div>
        </tr>
        <tr>
          <div>
            <td style="margin-top: 10px;width:80px;text-align: right;padding: 10px;"><%= f.label :商家状态 %></td>
            <td >
              <div style="display: none;">
                <%= f.number_field :status, value:1, class:"form-control" %>
              </div>

              <div class="toggle-switch text-toggle-switch" data-off-label="停用" data-on="primary" data-on-label="正常">
                <% if @seller.status == 0 %>
                    <input id="statuschange" name="statuschange" type="checkbox" onchange="javascript:adminstatuschange()">
                <% else %>
                    <input checked="" id="statuschange" name="statuschange" type="checkbox" onchange="javascript:adminstatuschange()">
                <% end %>
              </div>
            </td>
          </div>
        </tr>
        <tr>
          <td align="right" colspan="2" style="padding: 0px;"><div class="actions">
            <%= f.submit :"确定", class:"btn btn-primary-outline pull-right" %></td>
          </div>
        </tr>
      </table>
    </fieldset>
<% end %>



<%=render 'head' %>

<div class="container fluid-height clearfix">

  <h2 class="heading" style="margin-top: 15px;">广告设置</h2>
  <div class="widget-container fluid-height clearfix">
    <table class="table table-hover table-bordered table-striped">
      <thead>
      <tr>
        <th></th>
        <th class="heading">标题</th>
        <th class="heading">跳转地址</th>
        <th class="heading">图片</th>
        <th class="heading">状态</th>
        <th class="heading">开始日期</th>
        <th class="heading">结束日期</th>
        <th class="heading">开始时间</th>
        <th class="heading">结束时间</th>
        <th class="heading">操作</th>
      </tr>
      </thead>


      <% @advertisements.each do |advertisement| %>
          <tr>
            <td width="30px"><i class="heading icon-user"></i></td>
            <td><%= advertisement.title %></td>
            <td><%= advertisement.renderto %></td>
            <td><%= advertisement.image %></td>
            <td><%= advertisement.status %></td>
            <td><%= advertisement.startdate %></td>
            <td><%= advertisement.enddate %></td>
            <td><%= advertisement.starttime %></td>
            <td><%= advertisement.endtime %></td>
                <td width="100px" align="center"><%= link_to "", advertisement,  class:"icon-pencil usricons", title: "编辑" %>&nbsp;&nbsp;
                  <%= link_to '', advertisement, method: :delete, data: { confirm: '确认删除？' },class:"icon-trash usricons", title:"删除" %></td>
          </tr>
      <% end %>

    </table>

    <br>



    <%= link_to ' 添加广告', new_advertisement_path, class: "icon-plus btn btn-primary-outline pull-right",'data-no-turbolink'=>true%>
  </div>
</div>


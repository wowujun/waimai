<%=render 'head' %>
<div class="container fluid-height clearfix">


  <script type="text/javascript" language="JavaScript">
      function showlablediv(){
          document.getElementById("lablediv").style.display="block";
          document.getElementById("formdiv").style.display="none";
      }
      function showformdiv(){
          document.getElementById("lablediv").style.display="none";
          document.getElementById("formdiv").style.display="block";
          //document.getElementById("formdiv").style.display =  document.getElementById("formdiv").style.display=="none"?"block":"none";

      }
  </script>




  <div class="row">
    <div class="col-lg-12">
      <h2 class="heading"><i class="icon-random"></i>&nbsp; 商家分类</h2>
      <div class="widget-container fluid-height clearfix" style="padding: 10px;">

        <!--左边样式-->
        <div class="col-lg-6">
          <h4 class="icon-sitemap">&nbsp;商家分类</h4><p></p>
          <div id="lablediv">
            <p>
              <span class="col-sm-2" style="text-align: right;">分类名:</span>
              <%= @cla.name %>
            </p>
            <div>
              <a onclick="showformdiv()" class="btn btn-primary-outline"><i class="icon-pencil"></i>编辑分类名</a>
            </div>
          </div>
          <div id="formdiv" style="display: none;">
            <%= render 'form' %>
            <input type="button" onclick="showlablediv()" value="取消" class="btn btn-xs btn-primary">
          </div>
        </div>


      </div>
    </div>
  </div>

</div>